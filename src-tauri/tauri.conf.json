{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "page-replacement-app",
  "version": "0.1.0",
  "identifier": "com.page-replacement.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Page Replacement App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "maximized": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon.ico"
    ]
  }
}
